<script>
    import Typed from 'typed.js';
        const typed = new Typed('#element', {
        strings: ['¿Que te gustaria hacer?','Selecciona una opción'],
        loop: true,
        typeSpeed: 40,
        backSpeed: 30,
        backDelay: 5000,
        });
</script>

<script>
    const boton = document.querySelector("button") as HTMLButtonElement;
    const select = document.querySelector("select") as HTMLSelectElement;

    boton.addEventListener("click", function () {
        const opcionSeleccionada = select.options[select.selectedIndex].value; 
        sessionStorage.setItem('opcion seleccionada', opcionSeleccionada);

        // Crear y disparar un evento personalizado
        const event = new CustomEvent('opcionSeleccionada', { detail: opcionSeleccionada });
        window.dispatchEvent(event);
    });
</script>



